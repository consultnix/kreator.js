extends layout

block header
  .navbar.container
      #message.message.hidden
        p This is a top level view of your presentation
        p: .menu-item: button.js-handler--overview Overview
      ul#topmenu.topmenu
        li.menu-item--group
          button.js-handler--style-button(title='Make text bold') B
          button.js-handler--style-button(title='Make text italic') I
          button.js-handler--style-button(title='Underline text') U
        li.menu-item
          button.js-handler--list-button(title='Make list')
            span.glyphicon.glyphicon-list
        li.menu-item
          button.js-handler--code-block(title='Format text block')
            span.glyphicon.glyphicon-chevron-left
            span.glyphicon.glyphicon-chevron-right
        li.menu-item
          button.js-handler--overview(title='Presentation overview')
            span.glyphicon.glyphicon-zoom-out
        li.menu-item--group
          button.js-handler--align(data-align="left", title='Align text left')
            span.glyphicon.glyphicon-align-left
          button.js-handler--align(data-align="center", title='Align text center')
            span.glyphicon.glyphicon-align-center
          button.js-handler--align(data-align="right", title='Align text right')
            span.glyphicon.glyphicon-align-right
        li.menu-item
          select(name="heading-size", class="js-handler--headings", title='Set font size')
            option(value="none") Text size
            option(value="100px") 100px
            option(value="80px") 80px
            option(value="60px") 60px
            option(value="40px") 40px
            option(value="20px") 20px
        li.menu-item
          select(name="heading-type", class="js-handler--heading-type", title='Set heading')
            option(value="none") Heading
            option(value="h1") H1
            option(value="h2") H2
            option(value="h3") H3
        li.menu-item
          input(type="color", class="js-handler--color", title='Set font color')

block sidemenu
  include sidemenu

block content

  .reveal
    .slides
      section(contentEditable)
        h1 Hi!
        p Welcome to kreator.js

    .progress
      span

    .add-slide.add-slide--right.js-handler--add-slide-right.noselect(data-direction="right") +
    .add-slide.add-slide--bottom.js-handler--add-slide-down.noselect(data-direction="bottom") +

block scripts
  script(src="lib/head.min.js")
  script(src="lib/q.js")
  script(src="lib/jszip.js")
  script(src="lib/underscore-min.js")
  script(src="lib/reveal.min.js")
  script(src="http://cdn.peerjs.com/0.3/peer.js")
  script(src="lib/shepherd.min.js")
  script(src="lib/build/main.js")
